# FILE: .env.example

# Supabase settings
PRIVATE_SUPABASE_URL=https://your-project-ref.supabase.co
PRIVATE_SUPABASE_ANON_KEY=your-supabase-anon-key
PRIVATE_SUPABASE_SERVICE_ROLE=your-supabase-service-role-key

# Stripe settings
PRIVATE_STRIPE_API_KEY=sk_test_...
PRIVATE_STRIPE_WEBHOOK_SECRET=whsec_...

# Settings for email
PRIVATE_DEFAULT_FROM_EMAIL=noreply@yourdomain.com
PRIVATE_ADMIN_EMAIL=ops@yourdomain.com
PRIVATE_CONTACT_FORM_EMAIL=contact@yourdomain.com 
PRIVATE_MACHINE_RESET_EMAIL=machinereset@yourdomain.com 
PRIVATE_FROM_ADMIN_EMAIL=noreply@yourdomain.com

# The email address that receives emails when you visit the /test-email endpoint.
PRIVATE_TEST_EMAIL_RECIPIENT=your-personal-email@example.com

# --- AWS SES Settings ---
PRIVATE_AWS_REGION=us-east-2
PRIVATE_AWS_ACCESS_KEY_ID=your-aws-access-key-id
PRIVATE_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
PRIVATE_SES_CONFIGURATION_SET=your-ses-configuration-set

# License Manager settings
PRIVATE_LICENSE_MANAGER_URL=https://your-license-manager-instance.com
PRIVATE_LICENSE_MANAGER_API_KEY=your-license-manager-api-key

# --- Cloudflare R2 Credentials for PRIVATE Bucket ---
PRIVATE_R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
PRIVATE_R2_ACCESS_KEY_ID="your-Cloudflare-R2-Access-key"
PRIVATE_R2_SECRET_ACCESS_KEY="your-Cloudflare-R2-Secret-Access-key"
PRIVATE_R2_BUCKET_NAME="your-private-downloads-bucket"
PRIVATE_R2_REGION="auto"

# --- Cloudflare R2 (PUBLIC Assets) ---
# Bucket that holds READMEs and other public files served by https://assets.signallynx.com
PRIVATE_R2_PUBLIC_BUCKET_NAME=yourdomain-public-assets

# Feature Flags (publicly accessible)
# Determines if the "Create Profile" step is mandatory after sign-up.
# Use 'true' or 'false'.
PUBLIC_CREATE_PROFILE_STEP=true

# Website Access Gates (remove or leave blank to disable)
PRIVATE_SITE_ACCESS_PASSWORD=
PRIVATE_BETA_PURCHASE_PASSWORD=

PRIVATE_BETA_PASSPHRASE_SignalShield_Beta=
PRIVATE_BETA_PASSPHRASE_LynxRelay_Beta=
PRIVATE_BETA_PASSPHRASE_KeyCommander_Beta=

# Cloudflare Turnstile (CAPTCHA)
PUBLIC_TURNSTILE_SITE_KEY=
PRIVATE_TURNSTILE_SECRET_KEY=

# --- Dashboard MRR scope (default is "mapped")
PUBLIC_ADMIN_MRR_SCOPE=mapped   # mapped | allowlist | all

# Only used when PUBLIC_ADMIN_MRR_SCOPE="allowlist"
# Comma-separated **PRICE** IDs (e.g., price_123,price_abc)
PRIVATE_STRIPE_PRODUCT_IDS=
